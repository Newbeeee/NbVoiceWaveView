<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/mLongClickView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    tools:context="com.newbeeee.qt.nbvoicewaveview.MainActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/long_click"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/touch_up"
        android:layout_below="@+id/text1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"/>

    <com.newbeeee.qt.voice_wave_view.VoiceWaveView
        android:id="@+id/voice_wave_view"
        android:layout_width="120dp"
        android:layout_height="160dp"
        app:imageSrc="@drawable/ic_record"
        app:maxVolume="85"
        android:layout_centerInParent="true" />
</RelativeLayout>
